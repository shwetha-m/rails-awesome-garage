<h1><%= @car.brand %></h1>
<h2><%= @car.model %></h2>
<h2><%= @car.fuel %></h2>
<h2><%= @car.year %></h2>

<hr>

<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment, input_html: { placeholder: "Your comment goes here.." } %>
  <%= f.input :rating, collection: 1..5 %>
  <%= f.submit "Send", class: "btn btn-outline-secondary" %>
<% end %>

<hr>

<% @car.reviews.each do |review| %>
  <p><%= review.comment %> <%= 'â­' * review.rating %></p>
